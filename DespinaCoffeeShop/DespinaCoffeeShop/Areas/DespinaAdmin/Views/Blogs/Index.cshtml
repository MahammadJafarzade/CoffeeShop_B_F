@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
<div class="row col-lg-12">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blog cards</h4>
                <a class="btn btn-success" asp-action="Create">Create Blog cards</a>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Author
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                       <img src="~/assets/Img/@item.BlogImg" style="width:100px !important; height:75px !important;"/>
                                    </td>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @item.Author

                                    </td>
                                    <td>
                                        @item.PubishedDate
                                    </td>
                                    <td>
                                        @item.Desc
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                        <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@item.Id">
                                            <i class="mdi mdi-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
