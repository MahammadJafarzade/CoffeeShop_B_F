@model List<ProductListVM>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
<div class="row col-lg-12">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blog cards</h4>
                <a class="btn btn-success" asp-action="Create">Add Product</a>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Count
                                </th>
                                <th>
                                    Discount
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img src="~/assets/Img/@item.Image" style="width:100px !important; height:75px !important;" />
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    @item.ProductCategory
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.Count
                                </td>
                                <td>
                                    @item.Discount
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                    <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@item.Id">
                                        <i class="mdi mdi-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
