@using DespinaCoffeeShop.ViewModels.Basket
@model BasketIndexVM
<div class="row col-lg-12">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Your Basket</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Photo
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Quantity
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var basketProduct in Model.basketProducts)
                            {
                                <tr class="basket-product" id="@basketProduct.Id">
                                    <td>
                                        <img style="width=100%" src="~/assets/Img/ @basketProduct.ImageFile" />
                                    </td>
                                    <td>
                                        @basketProduct.Title
                                    </td>

                                    <td>
                                        @basketProduct.Price
                                    </td>

                                    <td>
                                        @basketProduct.Quantity
                                    </td>
                                </tr>
                            <td>
                                <a  data-id="@basketProduct.Id" class="btn btn-sm btn-danger" id="deletebtn" asp-action="Delete" asp-route-id="@basketProduct.Id">
                                    <i class="mdi mdi-delete"></i>
                                </a>
                            </td>
                        }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
