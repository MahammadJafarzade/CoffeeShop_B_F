@model HomeVM
@{
    ViewData["Title"] = "Index";
}
<main>
    <!-- Start Category section -->
    <div id="category">
        <div class="category-menu container">
            <ul>
                @foreach (var categories in Model.Categories)
                {
                    <li><a asp-action="MenuDetail" asp-controller="Menu"><img src="~/./assets/Img/@categories.Image"><span>@categories.Name</span></a></li>
                }
            </ul>
        </div>
        <div class="hamburger-menu">
            <input id="menu-toggle" type="checkbox" />
            <label class='menu-button-container' for="menu-toggle">
                <div class='menu-button'></div>
            </label>
            <ul class="menu">
                @foreach (var categories in Model.Categories)
                {
                    <li><a asp-action="MenuDetail" asp-controller="Menu"><img src="~/./assets/Img/@categories.Image"><span>@categories.Name</span></a></li>
                }
            </ul>
        </div>
        <!-- End Category section -->
    </div>
    <!-- Start slider section -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (int i = 0; i < 3; i++)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            }
        </ol>
        <div class="carousel-inner">
            @for (int i = 0; i < 3; i++)
            {
                <div class="carousel-item  @(i==0 ? "active first-slider":"")">
                    <img class="d-block w-100" src="~/./assets/Img/coffee-1572741_960_720.png" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="./assets/Img/coffee-1572739_960_720.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="./assets/Img/coffee-1572738_960_720.png" alt="Third slide">
                </div>
            }

        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- End slider section -->
    <!-- Start Discount section -->
    <section id="discounts">
        <div class="opportunities container">
            <div class="row">
                @foreach (var discount in Model.Discounts)
                {
                    <div class="discount col-md-6">
                        <img src="~/./assets/Img/@discount.Image">
                        <div class="description">
                            <i class="fa-solid fa-gift"></i>
                            <h2>@discount.Discdescription</h2>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- End Discount section -->
    <!-- Start Menu section -->
    <section id="menu">
        <div class="fullmenu">
            <div class="menu-title">
                <h1>Despina Coffee</h1>
                <h2>Menu</h2>
            </div>
            <div class="container">
                <div class="inner-menu row" data-aos="fade-up">
                    @foreach (var item in Model.menuProducts)
                    {
                        <div class="item col-md-6">
                            <div class="item-image">
                                <img src="~/./assets/Img/@item.ProductImage">
                            </div>
                            <div class="item-description">
                                <div class="title">
                                    <h5>@item.ProductName</h5>
                                    <span>$@item.ProductPrice.ToString("0.00")</span>
                                </div>
                                <div class="inner-coffee">
                                    <p>@item.ProductDescription</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="fullmenu-button">
                <button class="fullmenu-btn">
                    <a asp-action="MenuDetail" asp-controller="Menu">Explore Full Menu</a>
                </button>
            </div>
        </div>

    </section>
    <!-- End Menu section -->
    <!-- Start Shop section -->
    <section id="shop">
        <div class="shop container">
            <div class="shop-title">
                <h2>Despina shop</h2>
                <h4>Life is better with coffee</h4>
            </div>
            <div class="slick-slider" data-aos="fade-right">
                @foreach (var item in Model.Shops)
                {
                    <div class="shop-slide col-12">
                            <img src="~/./assets/Img/@item.Image">
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- End Shop section -->
    <!-- Start Blog section -->
    <section id="blog">
        <div class="blogs">
            <div class="container allblogs">
                <div class="blog-title">
                    <h2>Our blogs</h2>
                </div>
                <div class="slick-blog" data-aos="fade-up">
                    @foreach (var blog in Model.Blogs)
                    {
                        <div class="blog-info col-11">
                            <div class="blog-image col-md-12">
                                <a asp-action="detail" asp-controller="blog" asp-route-id="@blog.Id">
                                    <img src="~/./assets/Img/@blog.BlogImg ">
                                </a>
                            </div>
                            <div class="blog-description col-md-12">
                                <span><i class="fa-regular fa-user"></i>@blog.Author</span>
                                <p>@blog.PubishedDate</p>
                                <p><a asp-action="detail" asp-controller="blog" asp-route-id="@blog.Id">@blog.Title.</a></p>
                                <p>
                                    @blog.Desc
                                </p>
                                <p><a asp-action="detail" asp-controller="blog" asp-route-id="@blog.Id">Read more <i class="fa-solid fa-arrow-right"></i></a></p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- End Blog section -->
    <!-- Start Future section -->
    <section id="future">
        <div class="future">
            <div class="container">
                <div class="somefuture">
                    <h2>Our Some Future</h2>
                    <p>
                        The role of a good cook ware in the preparation of a sumptuous cannot be <br>over
                        emphasized then one consider white bread
                    </p>
                </div>
                <div class="allfutures row" data-aos="fade-up">
                    @foreach (var futures in Model.Futures)
                    {
                        <div class="future-description col-lg-3">
                            <div class="future-title">
                                <img src="~/./assets/Img/@futures.Image">
                                <h2>@futures.Title</h2>
                            </div>
                            <div class="future-content">
                                <p>
                                    @futures.Description
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- End Future section -->
    <!-- Start social-media section -->
    <section id="social-media">
        <div class="social-media">
            <div class="container">
                <div class="media-title">
                    <h2><i class="fa-solid fa-hashtag"></i>coffeedespina</h2>
                    <p>Enjoyed your stay at Despina? Share your moments with us. Follow us on Instagram and use</p>
                </div>
                <div class="media-info row" data-aos="fade-right">
                    @foreach (var item in Model.SocialMedias)
                    {
                        <div class="media-image col-lg-12">
                            <a href="#">
                                <img src="~/./assets/Img/@item.Image">
                                <div class="insta-overlay">
                                    <i class="fa-brands fa-instagram instagram"></i>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- End social-media section -->
</main>